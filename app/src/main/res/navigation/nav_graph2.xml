<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph2"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.tomorrowmaybe.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_fragmentTaskDetail"
            app:destination="@id/fragmentTaskDetail" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.tomorrowmaybe.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>

    //task
    <fragment
        android:id="@+id/fragmentTaskDetail"
        android:name="com.example.tomorrowmaybe.FragmentTaskDetail"
        android:label="Task Detail"
        tools:layout="@layout/fragment_task_detail">

        <argument
            android:name="taskId"
            app:argType="string"
            android:defaultValue="" />

        <action
            android:id="@+id/action_taskList_to_taskDetail"
            app:destination="@id/fragmentTaskDetail" />

        <action
            android:id="@+id/action_taskDetail_to_taskList"
            app:destination="@id/fragmentTaskDetail"
            app:popUpTo="@id/fragmentTaskDetail"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_fragmentTaskDetail_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>